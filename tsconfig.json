{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "rootDir": "./src",
        "baseUrl": ".",
        "module": "CommonJS",
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@core/*": ["./src/core/*"],
            "@data/*": ["./src/data/*"],
            "@models/*": ["./src/data/models/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@config": ["./src/config"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"]
}
