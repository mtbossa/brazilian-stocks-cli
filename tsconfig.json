{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022"],
        "rootDir": "./src",
        "module": "NodeNext",
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"]
}
