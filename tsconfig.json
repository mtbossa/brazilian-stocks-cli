{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "rootDir": "./src",
        "baseUrl": ".",
        "module": "CommonJS",
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "scrapers/*": ["./src/scrapers/*"],
            "models/*": ["./src/models/*"],
            "strategies/*": ["src/core/strategies/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"]
}
